{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Task API",
    "description": "API para gerenciamento de tarefas"
  },
  "host": "localhost:3002",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Cria uma nova tarefa",
        "description": "Cria uma nova tarefa com os dados fornecidos",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da tarefa",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa criada com sucesso",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "400": {
            "description": "Erro na requisição"
          }
        }
      },
      "get": {
        "summary": "Lista todas as tarefas",
        "description": "Retorna uma lista com todas as tarefas",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de tarefas",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Task"
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Obtém uma tarefa por ID",
        "description": "Retorna uma tarefa pelo seu ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da tarefa",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "404": {
            "description": "Tarefa não encontrada"
          }
        }
      },
      "put": {
        "summary": "Atualiza uma tarefa",
        "description": "Atualiza os dados de uma tarefa existente",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Dados atualizados da tarefa",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarefa atualizada com sucesso",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          },
          "404": {
            "description": "Tarefa não encontrada"
          }
        }
      },
      "delete": {
        "summary": "Deleta uma tarefa",
        "description": "Remove uma tarefa pelo seu ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "204": {
            "description": "Tarefa deletada com sucesso"
          },
          "404": {
            "description": "Tarefa não encontrada"
          }
        }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "title": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
